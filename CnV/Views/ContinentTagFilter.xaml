<ContentDialog
    x:Class="CnV.Views.ContinentTagFilter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CnV.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:tk="using:CommunityToolkit.WinUI.UI.Controls"
	Title="Filter"
    PrimaryButtonText="Okay"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">
	<StackPanel Width="320" >
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Continents" VerticalAlignment="Center" Margin="8,0"  />
			<Button Content="Clear Filter" Click="ContinentFilterClear" Style="{StaticResource ButtonSmall}" />
		</StackPanel>
		<Border
                    Style="{StaticResource BorderReveal}">
			<tk:WrapPanel  x:Name="continentsPanel" x:FieldModifier="public"  />
		</Border>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Tags" VerticalAlignment="Center" Margin="8,0"  />
			<Button Content="Clear Filter" Click="TagsFilterClear" Style="{StaticResource ButtonSmall}"  />
		</StackPanel>
		<Border
                    Style="{StaticResource BorderReveal}">
			<tk:WrapPanel x:Name="tagsPanel" x:FieldModifier="public" />
		</Border>
		
	</StackPanel>
</ContentDialog>
