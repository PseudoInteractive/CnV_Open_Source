<ContentDialog
    x:Class="CnV.Views.Fixes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:tk="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:local="using:CnV.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Changelog"
    PrimaryButtonText="Done" 
>
	<Grid>
		<ScrollViewer 
                  Margin="12"
                  BorderBrush="{ThemeResource SystemControlBackgroundAccentRevealBorderBrush}"
                  BorderThickness="2"
                  HorizontalScrollBarVisibility="Disabled"
		ZoomMode="Enabled"
                  VerticalScrollBarVisibility="Visible">
			<tk:MarkdownTextBlock x:Name="fixesText" x:FieldModifier="public" WrapCodeBlock="True"
                                  Margin="6" Background="{x:Null}" TextWrapping="Wrap"
                                   />
		</ScrollViewer>
	</Grid>
</ContentDialog>
