<UserControl
    x:Class="CnV.PlayerStats"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnv="using:CnV"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:tk="using:CommunityToolkit.WinUI.UI.Controls"

	
    mc:Ignorable="d">

    <tk:WrapPanel Orientation="Horizontal" HorizontalSpacing="4" Margin="0" Padding="0" IsTabStop="True" IsTapEnabled="true" >
		<cnv:ZirconiaText x:Name="zirc" 
					
					  Text="{x:Bind zirconiaS, Mode=OneWay}" 
					  
					  
					 />
		<cnv:ManaText Text="{x:Bind manaS, Mode=OneWay}" 
					 />

		<Image Source="{x:Bind cnv:ImageHelper.Get('UI/icons_ressource_all.png')}" VerticalAlignment="Center"
					  Tapped="AllTapped"
					  ContextRequested="ResContextRequest" 
			   ToolTipService.ToolTip="{x:Bind cnv:Player.me.refinesAndGoldS,Mode=OneWay}"
					 />

		<Image Source="{x:Bind cnv:ImageHelper.Get('UI/icons/quests/icon_quest_3.png')}" VerticalAlignment="Center" Margin="8,0,0,0" Tapped="QuestsTapped"
			   ToolTipService.ToolTip="Quests" />

	</tk:WrapPanel>
</UserControl>
