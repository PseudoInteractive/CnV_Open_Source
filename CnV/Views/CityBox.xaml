<UserControl
    x:Class="CnV.CityBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnv="using:CnV"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" 
	ToolTipService.ToolTip="{x:Bind city.toolTip}"
    d:DesignWidth="400">
	<Grid Height="{StaticResource MediumGridRowHeight}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="32" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<TextBlock Text="{x:Bind Label}" Style="{StaticResource TextBlockSmall}" />
		<Image Source= "{x:Bind icon, Mode=OneWay}" Grid.Column="1" Tapped="Image_Tapped" RightTapped="Image_RightTapped" HorizontalAlignment="Center"
                     Stretch="Uniform" VerticalAlignment="Center"  />
		<TextBlock  Grid.Column="2" Text="{x:Bind name}" Style="{StaticResource TextBlockSmall}"  VerticalAlignment="Center" />
	</Grid>
</UserControl>
