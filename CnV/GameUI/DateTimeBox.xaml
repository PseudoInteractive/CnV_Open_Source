<UserControl
    x:Class="CnV.DateTimeBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnv="using:CnV"
	xmlns:sfe="using:Syncfusion.UI.Xaml.Editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Loaded="OnLoaded"
  >

    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="115"/>
			<ColumnDefinition Width="140"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<sfe:SfDatePicker x:Name="date" Header="{x:Bind labelDate}" AllowNull="True" DropDownOpened="date_DropDownOpened" PlaceholderText="Today" DisplayDateFormat="MM/dd" 
							/>
		<sfe:SfTimePicker Grid.Column="1" x:Name="time"  Header="{x:Bind labelTime}"  DropDownOpened="time_DropDownOpened"
				ClockIdentifier="24HourClock" AllowNull="True" PlaceholderText="ASAP" DisplayTimeFormat="HH:mm:ss"  />
		<Button Grid.Row="1" Content="Clear" Click="ClearClick"  />
		<ComboBox Grid.Column="1" Grid.Row="1" ItemsSource="{x:Bind cnv:DateTimeBox.recent ,Mode=OneWay}" SelectionChanged="RecentChanged"  />
	</Grid>
</UserControl>
