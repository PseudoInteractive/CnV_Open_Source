<cnv:DialogG
    x:Class="CnV.AllianceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnv="using:CnV"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid>
		<StackPanel Width="400">
			<TextBox Header="Name" x:Name="name" FontSize="24" />
			<TextBox Header="Abbreviation" x:Name="abbreviation" FontSize="24" />
			<ListView x:Name="invites">
				<ListView.ItemTemplate>
					<DataTemplate x:DataType="cnv:CnVEventAllianceInvite">
						<StackPanel>
							<TextBlock Text=""/>
						</StackPanel>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackPanel>
	</Grid>
</cnv:DialogG>
