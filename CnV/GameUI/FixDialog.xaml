<cnv:DialogG
    x:Class="CnV.FixDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnv="using:CnV"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="660"
	xmlns:tk="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d">



	<ScrollViewer>
		<StackPanel>

			<cnv:ResourcesControl x:Name="_resources" Desc="Resources" Rss="{x:Bind fix.resources, Mode=TwoWay}" />
			<cnv:ResourcesControl x:Name="_refines" Desc="Refines" Rss="{x:Bind fix.refines, Mode=TwoWay}" />
			<cnv:TroopsControl troops="{x:Bind fix.troops, Mode=TwoWay}" city="{x:Bind city}" />
			<NumberBox Value="{x:Bind fix.cavernLootD,  Mode=TwoWay}" />
		</StackPanel>
				
				</ScrollViewer>
</cnv:DialogG>
