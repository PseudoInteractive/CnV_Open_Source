<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:CnV.Converters"
    xmlns:converterTK="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:tk="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:sf="using:Syncfusion.UI.Xaml.DataGrid"
 >
	<Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
		<Setter Property="FontFamily" Value="Bahnschrift,Segoe Fluent Icons" />
		<Setter Property="FontWeight" Value="SemiLight" />
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
		<Setter Property="TextTrimming" Value="None" />
		<Setter Property="TextWrapping" Value="Wrap" />
		<Setter Property="LineStackingStrategy" Value="MaxHeight" />
		<Setter Property="TextLineBounds" Value="Full" />
	</Style>
    <x:Double x:Key="ContentDialogMaxWidth">1024</x:Double>
	<x:Double x:Key="FlyoutMaxWidth">1920</x:Double>
	<x:Double x:Key="GridViewMaxWidth">1440</x:Double>

	<x:Double x:Key="ContentDialogMaxHeight">800</x:Double>
	<x:Double x:Key="TeachingTipMaxHeight">1800</x:Double>
	<x:Double x:Key="TeachingTipMaxWidth">1680</x:Double>
	<SolidColorBrush x:Key="HyperLinkBrush" Color="#FFA060FF" />

	

	
	<Style TargetType="HyperlinkButton" >
		<Setter Property="Foreground" Value="{StaticResource HyperLinkBrush}" />
		<Setter Property="FontFamily" Value="Bahnschrift,Segoe Fluent Icons"/>
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
	</Style>
	<Style TargetType="tk:MarkdownTextBlock">
		<Setter Property="LinkForeground" Value="{StaticResource HyperLinkBrush}" />
	</Style>

	<Style TargetType="Button" BasedOn="{StaticResource ButtonRevealStyle}">
		<Setter Property="VerticalAlignment" Value="Stretch"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="FontFamily" Value="Bahnschrift,Segoe Fluent Icons"/>
		<Setter Property="FontStretch" Value="Condensed" />
		<Setter Property="FontWeight" Value="SemiLight" />
		
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
	</Style>

	<Style x:Key="ButtonSmall" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="FontFamily" Value="Bahnschrift,Segoe Fluent Icons"/>
		<Setter Property="FontStretch" Value="Condensed" />
		<Setter Property="FontWeight" Value="SemiLight" />

		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
		<Setter Property="IsTextScaleFactorEnabled" Value="False"/>
	</Style>
	
	
	
	<Style x:Key="ButtonMedium" TargetType="Button" BasedOn="{StaticResource ButtonSmall}">
		<Setter Property="Margin" Value="4"/>
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
	</Style>
	<Style x:Key="ButtonLarge" TargetType="Button" BasedOn="{StaticResource ButtonSmall}">
		<Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
		<Setter Property="Margin" Value="4"/>
	</Style>

	<!--Text Block-->
	
	<Style TargetType="TextBlock" x:Key="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}"  />


	<Style TargetType="TextBlock" x:Key="TextBlockCondensed" BasedOn="{StaticResource TextBlock}" >
		<Setter Property="FontStretch" Value="Condensed"/>
		<Setter Property="FontWeight" Value="SemiLight" />

	</Style>


	<Style x:Key="TextBlockSmall" TargetType="TextBlock" BasedOn="{StaticResource TextBlockCondensed}" >
		<Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />

	</Style>

	<Style x:Key="TextBlockLarge" TargetType="TextBlock" BasedOn="{StaticResource TextBlock}" >
		<Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
	</Style>
	<Style x:Key="TextBlockMedium" TargetType="TextBlock" BasedOn="{StaticResource TextBlock}" >
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />

	</Style>
	<Style x:Key="TextBoxCenter" BasedOn="{StaticResource TextBlock}" TargetType="TextBlock">
		<Setter Property="HorizontalTextAlignment" Value="Center" />
	</Style>
	<Style  x:Key="TextBlockRight" BasedOn="{StaticResource TextBlock}" TargetType="TextBlock">
		<Setter Property="HorizontalTextAlignment"  Value="Right" />
	</Style>

	<Style x:Key="TextBlockSmallCenter" BasedOn="{StaticResource TextBlockSmall}" TargetType="TextBlock">
		<Setter Property="HorizontalTextAlignment" Value="Center" />
	</Style>
	<Style  x:Key="TextBlockSmallRight" BasedOn="{StaticResource TextBlockSmall}" TargetType="TextBlock">
		<Setter Property="HorizontalTextAlignment"  Value="Right" />
	</Style>

	<!--default text block-->
	<Style TargetType="TextBlock" BasedOn="{StaticResource TextBlock}" />

	<!--Text Block-->


	<!--links-->
	
	<Style  x:Key="RightAlignLink"
            BasedOn="{StaticResource ButtonTextStyle }"
                    TargetType="TextBlock">
		<Setter Property="VerticalAlignment"
                        Value="Center" />
		<Setter Property="HorizontalTextAlignment"
                        Value="Right" />

	</Style>
	
	<Style  x:Key="LeftAlignLink"
            BasedOn="{StaticResource ButtonTextStyle }"
                    TargetType="TextBlock">
		<Setter Property="VerticalAlignment"
                        Value="Center" />
		<Setter Property="HorizontalTextAlignment"
                        Value="Left" />
	</Style>
	<Style  x:Key="CenterAlignLink"
            BasedOn="{StaticResource ButtonTextStyle }"
                    TargetType="TextBlock">
		<Setter Property="VerticalAlignment"
                        Value="Center" />
		<Setter Property="Margin" Value="0,0,0,0" />
		<Setter Property="HorizontalTextAlignment"
                        Value="Center" />
	</Style>
	<!--Text Block-->



	<!--Text Box-->

	<Style TargetType="TextBox" x:Key="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}">
		<Setter Property="FontFamily" Value="Bahnschrift,Segoe Fluent Icons"/>
		<Setter Property="FontWeight" Value="Normal" />
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
	</Style>

	<!--Default-->
	<Style TargetType="TextBox"  BasedOn="{StaticResource TextBox}" />


	<Style TargetType="TextBox" x:Key="TextBoxReveal" BasedOn="{StaticResource TextBox}" >
		<Setter Property="BorderBrush" Value="{ThemeResource SystemControlBackgroundAccentRevealBorderBrush}"/>
    </Style>

	<Style  x:Key="RightAlignBox" BasedOn="{StaticResource TextBox}" TargetType="TextBox">
		<Setter Property="TextAlignment" Value="Right" />

	</Style>
	
	<!--Text Box-->
  
	<!--NumberBox-->
	
	<Style x:Key="NumberBox" TargetType="NumberBox" >
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
		<Setter Property="FontFamily" Value="Bahnschrift,Segoe Fluent Icons"/>
		<Setter Property="FontWeight" Value="Normal"/>
		<Setter Property="FontStretch" Value="Normal" />
		<Setter Property="SpinButtonPlacementMode" Value="Compact"/>
		<Setter Property="SmallChange" Value="1"/>
		<Setter Property="LargeChange" Value="10"/>
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="BorderBrush" Value="{ThemeResource SystemControlBackgroundAccentRevealBorderBrush}"/>
		<Setter Property="AcceptsExpression" Value="True" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Margin" Value="2" />
	</Style>

	<!--default-->
	<Style   BasedOn="{StaticResource NumberBox}" TargetType="NumberBox" />

	<Style  x:Key="NumberBoxSmall" BasedOn="{StaticResource NumberBox}" TargetType="NumberBox">
		<Setter Property="Width" Value="110" />
	</Style>
	<Style  x:Key="NumberBoxMedium" BasedOn="{StaticResource NumberBox}" TargetType="NumberBox">
		<Setter Property="Width" Value="125" />
	</Style>
	<Style  x:Key="NumberBoxWide" BasedOn="{StaticResource NumberBox}" TargetType="NumberBox">
		<Setter Property="Width" Value="140" />
	</Style>

	
	<Style  x:Key="RightAlignNumberBox" BasedOn="{StaticResource NumberBox}" TargetType="NumberBox">
		<Setter Property="HorizontalContentAlignment" Value="Right" />
	</Style>
	<Style x:Key="NumberBoxRes" BasedOn="{StaticResource RightAlignNumberBox}" TargetType="NumberBox">
		<Setter Property="SmallChange" Value="25000"/>
		<Setter Property="Width" Value="140"/>
		<Setter Property="LargeChange" Value="100000"/>
	</Style>
	<Style x:Key="NumberBoxCarts" BasedOn="{StaticResource RightAlignNumberBox}" TargetType="winui:NumberBox">
		<Setter Property="SmallChange" Value="100"/>
		<Setter Property="Width" Value="120"/>
		<Setter Property="LargeChange" Value="1000"/>
	</Style>
	<Style x:Key="NumberBoxShips" BasedOn="{StaticResource RightAlignNumberBox}" TargetType="winui:NumberBox">
		<Setter Property="SmallChange" Value="10"/>
		<Setter Property="Width" Value="120"/>
		<Setter Property="LargeChange" Value="100"/>
	</Style>
	<Style x:Key="NumberBoxPercent" BasedOn="{StaticResource RightAlignNumberBox}" TargetType="winui:NumberBox">
		<Setter Property="SmallChange" Value="0.01"/>
		<Setter Property="LargeChange" Value="0.1"/>
		<Setter Property="Width" Value="120"/>
	</Style>
	
	<!--NumberBox-->


	<!--Toggle Button-->
	<Style x:Key="ToggleButton" TargetType="ToggleButton" BasedOn="{StaticResource ToggleButtonRevealStyle}" >
		<Setter Property="FontFamily" Value="Bahnschrift,Segoe Fluent Icons"/>
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
		<Setter Property="FontWeight" Value="Normal" />
		<Setter Property="Margin" Value="2" />
		<Setter Property="Padding" Value="2" />
	</Style>

	<Style x:Key="ToggleButtonCondensed" TargetType="ToggleButton" BasedOn="{StaticResource ToggleButton}" >
		<Setter Property="FontStretch" Value="Condensed" />
		<Setter Property="FontWeight" Value="SemiLight" />

	</Style>

	<!--default-->
	
	<Style BasedOn="{StaticResource ToggleButton}" TargetType="ToggleButton">
	</Style>
	

	<!--Toggle Button-->

	 <!--Syncfusion text-->
	
	<Style x:Key="SfTextCell" TargetType="sf:GridCell">
		<Setter Property="FontFamily" Value="Bahnschrift,Segoe Fluent Icons"/>
		<Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
		<Setter Property="FontStretch" Value="Condensed" />
		<Setter Property="FontWeight" Value="SemiLight" />

	</Style>
	<Style  TargetType="sf:GridCell" BasedOn="{StaticResource SfTextCell}"/>

	<Style x:Key="SfGridColumnBase" TargetType="sf:GridColumn">
		<Setter Property="ShowHeaderToolTip" Value="True"/>
	</Style>
	<Style  TargetType="sf:GridImageColumn" BasedOn="{StaticResource SfGridColumnBase}">
		<Setter Property="AllowSorting" Value="False"/>
		<Setter Property="AllowFiltering" Value="False"/>
	</Style>
	<Style  TargetType="sf:GridTemplateColumn" BasedOn="{StaticResource SfGridColumnBase}">
		<Setter Property="AllowSorting" Value="False"/>
		<Setter Property="AllowFiltering" Value="False"/>
	</Style>
	<Style  TargetType="sf:GridTextColumn" BasedOn="{StaticResource SfGridColumnBase}">
	</Style>
	<Style  TargetType="sf:GridNumericColumn" BasedOn="{StaticResource SfGridColumnBase}">
	</Style>

	
	
    
    
	<Style  x:Key="SfLink"
	        BasedOn="{StaticResource SfTextCell }"
	        TargetType="sf:GridCell">
		<Setter Property="Foreground" Value="{StaticResource HyperLinkBrush}"/>
		<Setter Property="SelectionForeground" Value="{ThemeResource HyperlinkPressedForegroundThemeBrush}"/>
	</Style>

	<!--Syncfusion text-->

	<!--TkDataGrid-->
	
	<Style  x:Key="CellCenterLink"
            BasedOn="{StaticResource CellButtonTextStyle }"
                    TargetType="tk:DataGridCell"  >
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style  x:Key="CellCenter"
            BasedOn="{StaticResource CellTextStyle }"
                    TargetType="tk:DataGridCell">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment"
                        Value="Center" />
    </Style>
    <Style  x:Key="CellRight"
            BasedOn="{StaticResource CellTextStyle }"
                    TargetType="tk:DataGridCell">
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalAlignment"
                        Value="Center" />
		<Setter Property="HorizontalAlignment"
                        Value="Right" />
    </Style>
    <Style  x:Key="CellLeft"
            BasedOn="{StaticResource CellTextStyle }"
                    TargetType="tk:DataGridCell">
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment"
                        Value="Left" />
    </Style>
	<!--TkDataGrid-->


	<Style TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBoxStyle}">
		<Setter Property="FontFamily" Value="Bahnschrift,Segoe Fluent Icons"/>
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
	</Style>
	
	<Style TargetType="RadioButtons" >
		<Setter Property="FontFamily" Value="Bahnschrift,Segoe Fluent Icons"/>
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
	</Style>
	
	
	<Style TargetType="Border" x:Key="BorderReveal"  >
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="Margin" Value="2"/>
		<Setter Property="Padding" Value="4"/>
		<Setter Property="BorderBrush" Value="{ThemeResource SystemControlBackgroundAccentRevealBorderBrush}"/>
	</Style>
	


	<converter:DateTimeConverter x:Key="DateTimeConverter" />
    <converter:IntConverter x:Key="IntConverter" />
	<converter:TimeConverter x:Key="TimeConverter" />
	<converter:FloatConverter x:Key="FloatConverter" />
	<converter:NullableIntToDoubleConverter x:Key="NullableIntConverter" />
	<converterTK:FormatStringConverter x:Key="FormatString" />
</ResourceDictionary>
