<Application x:Class="COTG.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:win10="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          RequestedTheme="Dark"   
	xmlns:Custom="using:COTG.Views"
	xmlns:Custom1="using:Telerik.UI.Xaml.Controls.Grid">
    
    <Application.Resources>
        <ResourceDictionary>
			<win10:Style TargetType="Custom1:RadDataGrid">
				<win10:Setter Property="FontFamily" Value="Tw Cen MT Condensed"/>
				<win10:Setter Property="VerticalContentAlignment" Value="Top"/>
				<win10:Setter Property="Template">
					<win10:Setter.Value>
						<win10:ControlTemplate TargetType="win10:ContentControl">
							<win10:ContentPresenter ContentTemplate="{win10:TemplateBinding ContentTemplate}" Content="{win10:TemplateBinding Content}" ContentTransitions="{win10:TemplateBinding ContentTransitions}" HorizontalAlignment="{win10:TemplateBinding HorizontalContentAlignment}" Margin="{win10:TemplateBinding Padding}" VerticalAlignment="{win10:TemplateBinding VerticalContentAlignment}"/>
						</win10:ControlTemplate>
					</win10:Setter.Value>
				</win10:Setter>
			</win10:Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Microsoft.UI.Xaml/DensityStyles/Compact.xaml">
					
				</ResourceDictionary>
				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Styles/_Colors.xaml" />
                <ResourceDictionary Source="/Styles/_FontSizes.xaml" />
                <ResourceDictionary Source="/Styles/_Thickness.xaml" />
                <ResourceDictionary Source="/Styles/TextBlock.xaml" />
                <ResourceDictionary Source="/Styles/CommandBar.xaml" />
                <ResourceDictionary Source="/Styles/Page.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                    <ResourceDictionary x:Key="Dark">
                        <ResourceDictionary.MergedDictionaries>

                        <win10:ColorPaletteResources Accent="#FF780202" AltHigh="#FF000000" AltLow="#FF000000" AltMedium="#FF000000" AltMediumHigh="#FF000000" AltMediumLow="#FF000000"
																	BaseLow="#FF4D2B3A" BaseMedium="#FFAF939F" BaseMediumHigh="#FFC7ADB8" BaseMediumLow="#FF7E5F6C" ChromeAltLow="#FFC7ADB8" ChromeBlackHigh="#FF000000" ChromeBlackLow="#FFC7ADB8" ChromeBlackMedium="#FF000000" ChromeBlackMediumLow="#FF000000" ChromeDisabledHigh="#FF4D2B3A" ChromeDisabledLow="#FFAF939F" ChromeGray="#FF967986" ChromeHigh="#FF967986" ChromeLow="#FF31091D" ChromeMedium="#FF381124" ChromeMediumLow="#FF462233" ChromeWhite="#FFFFFFFF" ListLow="#FF381124" ListMedium="#FF4D2B3A" />
                            <ResourceDictionary>
                                <Color x:Key="SystemChromeAltMediumHighColor">#CC800840</Color>
                                <Color x:Key="SystemChromeAltHighColor">#DD4D4B8A</Color>
                                <Color x:Key="SystemAccentColor">#DD780202</Color>
                            <!-- Override system shape defaults -->
                                <!-- Override system borders -->
                                <!-- Override system generated accent colors -->
                        </ResourceDictionary>
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                    <ResourceDictionary x:Key="Light">
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary>
                                
                                <Color x:Key="SystemChromeAltMediumHighColor">#CCD6FAEB</Color>
                                <Color x:Key="SystemChromeAltHighColor">#FFF4ACCC</Color>
                                <!-- Override system shape defaults -->
                   
                                <!-- Override system borders -->
                                <!-- Override system generated accent colors -->
                                <Color x:Key="SystemAccentColorLight1">#FF73AF9A</Color>
                                <Color x:Key="SystemAccentColorLight2">#FF84BBA8</Color>
                                <Color x:Key="SystemAccentColorLight3">#FF96C8B6</Color>
                                <Color x:Key="SystemAccentColorDark1">#FF4E9179</Color>
                                <Color x:Key="SystemAccentColorDark2">#FF3B7F66</Color>
                                <Color x:Key="SystemAccentColorDark3">#FF276C52</Color>
                            </ResourceDictionary>
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
           
                </ResourceDictionary.ThemeDictionaries>
			<win10:Style TargetType="Custom:UserTab">
				<win10:Setter Property="HorizontalContentAlignment" Value="Left"/>
				<win10:Setter Property="VerticalContentAlignment" Value="Top"/>
				<win10:Setter Property="Template">
					<win10:Setter.Value>
						<win10:ControlTemplate TargetType="win10:ContentControl">
							<win10:ContentPresenter ContentTemplate="{win10:TemplateBinding ContentTemplate}" Content="{win10:TemplateBinding Content}" ContentTransitions="{win10:TemplateBinding ContentTransitions}" HorizontalAlignment="{win10:TemplateBinding HorizontalContentAlignment}" Margin="{win10:TemplateBinding Padding}" VerticalAlignment="{win10:TemplateBinding VerticalContentAlignment}"/>
						</win10:ControlTemplate>
					</win10:Setter.Value>
				</win10:Setter>
			</win10:Style>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
