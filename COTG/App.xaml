<Application
	x:Class="COTG.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Application.Resources>
        <ResourceDictionary>
            <!-- Style definition -->
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily"
                        Value="Segoe UI Emoji" />
            </Style>
            <Style  x:Key="RightAlign"
                    TargetType="TextBlock">
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="HorizontalAlignment"
                        Value="Right" />
                <Setter Property="Margin"
                        Value="0,0,4,0" />
            </Style>
            <Style x:Key="LeftAlign"
                   TargetType="TextBlock">
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Margin"
                        Value="4,0,0,0" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
            </Style>
            <Style x:Key="CenterAlign"
                   TargetType="TextBlock">
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Margin"
                        Value="0,0,0,0" />
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
            </Style>
            
            <AcrylicBrush
				x:Key="Acryllic"
				Opacity="0.6"
				TintColor="{ThemeResource SystemColorActiveCaptionColor}"
				TintLuminosityOpacity="0.7"
				TintOpacity="0.5" />
			<ResourceDictionary.MergedDictionaries>
				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" UseCompactResources="True" />
				<ResourceDictionary Source="/Styles/_Colors.xaml" />
                <ResourceDictionary Source="/Styles/_FontSizes.xaml" />
				<ResourceDictionary Source="/Styles/_Thickness.xaml" />
				<ResourceDictionary Source="/Styles/TextBlock.xaml" />
				<ResourceDictionary Source="/Styles/CommandBar.xaml" />
				<ResourceDictionary Source="/Styles/Page.xaml" />
				<ResourceDictionary Source="ms-appx:///Microsoft.UI.Xaml/DensityStyles/Compact.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
