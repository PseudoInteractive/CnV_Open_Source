<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:COTG.Converters"
    xmlns:converterTK="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:tk="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:gridPrimitives="using:Telerik.UI.Xaml.Controls.Grid.Primitives"
    >
    <x:Double x:Key="ContentDialogMaxWidth">1024</x:Double>
	
    <x:Double x:Key="ContentDialogMaxHeight">800</x:Double>
	<x:Double x:Key="TeachingTipMaxHeight">800</x:Double>
	<x:Double x:Key="TeachingTipMaxWidth">1024</x:Double>
	<Style TargetType="Page">
	
        <Setter Property="FontFamily" Value="Tw Cen MT Condensed"/>
	
        <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
    </Style>
    <Style x:Key="ButtonSmall" TargetType="Button" BasedOn="{StaticResource ButtonRevealStyle}">
        <Setter Property="FontFamily" Value="Tw Cen MT Condensed"/>
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
        <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
		<Setter Property="FontStretch" Value="Condensed"/>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Tw Cen MT Condensed"/>
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
        <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
    </Style>
	<Style TargetType="tk:WrapPanel">
		 <Setter Property="Margin" Value="4"/>
         <Setter Property="HorizontalSpacing" Value="4"/>
          <Setter Property="VerticalSpacing" Value="4"/>
	</Style>
    <Style TargetType="winui:NumberBox">
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
        <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
		<Setter Property="FontStretch" Value="Condensed"/>
    </Style>
	<Style TargetType="Border" x:Key="BorderReveal" >
        <Setter Property="BorderThickness" Value="1" />
		<Setter Property="Margin" Value="2"/>
		<Setter Property="Padding" Value="1"/>
        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}"/>
    </Style>
	<Style TargetType="StackPanel" x:Key="StackPanelReveal" >
        <Setter Property="BorderThickness" Value="1" />
		<Setter Property="Margin" Value="4"/>
		<Setter Property="Padding" Value="1"/>
        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}"/>
    </Style>
	<Style TargetType="TextBox" x:Key="TextBoxReveal" >
        <Setter Property="BorderThickness" Value="1" />
		<Setter Property="Margin" Value="3"/>
		<Setter Property="Padding" Value="1"/>
        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}"/>
    </Style>
    <Style x:Key="TextBlockSmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Tw Cen MT Condensed"/>
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
		<Setter Property="FontStretch" Value="Condensed"/>
        
    </Style>
    <Style x:Key="TextBoxSmall" TargetType="TextBox">
        <Setter Property="FontFamily" Value="Tw Cen MT Condensed"/>
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
		 <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}"/>
       
    </Style>
    <Style x:Key="NumberBoxSmall" TargetType="winui:NumberBox">
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
        <Setter Property="SpinButtonPlacementMode" Value="Compact"/>
	    <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{ThemeResource SystemControlBackgroundBaseLowRevealBorderBrush}"/>
        <Setter Property="AcceptsExpression" Value="True" />
        <Setter Property="Margin" Value="4"/>
    </Style>
    <Style  x:Key="RightAlignBox" BasedOn="{StaticResource TextBoxSmall}" TargetType="TextBox">
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="HorizontalAlignment"
                        Value="Right" />
        <Setter Property="Margin" Value="0,0,4,0" />
    </Style>
    <Style  x:Key="RightAlignNumberBox" BasedOn="{StaticResource NumberBoxSmall}" TargetType="winui:NumberBox">
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="Margin" Value="0,0,4,0" />
    </Style>
	<Style BasedOn="{StaticResource ToggleButtonRevealStyle}" TargetType="ToggleButton">
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="IsTextScaleFactorEnabled" Value="False"/>
        <Setter Property="Margin" Value="4"/>
	</Style>
    <Style  x:Key="RightAlign" BasedOn="{StaticResource TextBlockSmall}" TargetType="TextBlock">
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="HorizontalAlignment"
                        Value="Right" />
        <Setter Property="Margin" Value="0,0,4,0" />
    </Style>
    <Style  x:Key="RightAlignLink"
            BasedOn="{StaticResource ButtonTextStyle }"
                    TargetType="TextBlock">
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="HorizontalAlignment"
                        Value="Right" />
        <Setter Property="Margin"
                        Value="0,0,4,0" />
    </Style>
    <Style x:Key="LeftAlign" BasedOn="{StaticResource TextBlockSmall}" TargetType="TextBlock">
        
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="Margin"
                        Value="4,0,0,0" />
        <Setter Property="HorizontalAlignment"
                        Value="Left" />
    </Style>
    <Style x:Key="CenterAlign" BasedOn="{StaticResource TextBlockSmall}" TargetType="TextBlock">
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style  x:Key="LeftAlignLink"
            BasedOn="{StaticResource ButtonTextStyle }"
                    TargetType="TextBlock">
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="HorizontalAlignment"
                        Value="Left" />
    </Style>
    <Style  x:Key="CenterAlignLink"
            BasedOn="{StaticResource ButtonTextStyle }"
                    TargetType="TextBlock">
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="HorizontalAlignment"
                        Value="Center" />
    </Style>
    <Style  x:Key="CellCenterLink"
            BasedOn="{StaticResource CellButtonTextStyle }"
                    TargetType="tk:DataGridCell"  >
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style  x:Key="CellCenter"
            BasedOn="{StaticResource CellTextStyle }"
                    TargetType="tk:DataGridCell">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment"
                        Value="Center" />
    </Style>
    <Style  x:Key="CellRight"
            BasedOn="{StaticResource CellTextStyle }"
                    TargetType="tk:DataGridCell">
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="HorizontalAlignment"
                        Value="Right" />
    </Style>
    <Style  x:Key="CellLeft"
            BasedOn="{StaticResource CellTextStyle }"
                    TargetType="tk:DataGridCell">
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="VerticalAlignment"
                        Value="Center" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment"
                        Value="Left" />
    </Style>
    <converter:DateTimeConverter x:Key="DateTimeConverter" />
    <converter:IntConverter x:Key="IntConverter" />
    <converter:FloatConverter x:Key="FloatConverter" />
    <converterTK:FormatStringConverter x:Key="FormatString" />
</ResourceDictionary>
