<local:UserTab
    x:Class="COTG.Views.ChatTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:COTG.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wuxdata="using:Windows.UI.Xaml.Data"
    xmlns:tk="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
 >
    <Grid x:Name="chatGrid" PointerEntered="Grid_PointerEntered" TabFocusNavigation="Once">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <local:HyperlinkColorConverter x:Key="hyperlinkColorConverter" />
            <CollectionViewSource x:Name="cvsGroups" Source="{x:Bind Groups}" IsSourceGrouped="True" ItemsPath="Items"
                              />
            <DataTemplate x:Key="ZoomedInGroupHeaderTemplate" x:DataType="local:ChatEntryGroup">
                <TextBlock Text="{x:Bind Title,Mode=OneTime}" Foreground="{ThemeResource ApplicationForegroundThemeBrush}" Style="{StaticResource SubtitleTextBlockStyle}"/>
            </DataTemplate>
            <DataTemplate x:Key="ZoomedOutTemplate" x:DataType="wuxdata:ICollectionViewGroup">
                <TextBlock Text="{x:Bind ((local:ChatEntryGroup)Group).Title,Mode=OneTime}" Style="{StaticResource SubtitleTextBlockStyle}" />
            </DataTemplate>
            <!-- Data template used: -->
            <!-- The data template is bound to a custom DataType called Message. -->
            <!-- Each Message object has a color and alignment assigned to it based on whether it was
sent or received, and those values are bound in the DataTemplate.-->
            <DataTemplate x:Key="MessageViewTemplate" x:DataType="local:ChatEntry">
                    <Grid  Background="{x:Null}" Height="Auto" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width ="60"  />
                        <ColumnDefinition Width ="90" />
                        <ColumnDefinition Width ="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{x:Bind arrivedString,Mode=OneTime}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Gray" FontSize="12" Margin="0,0,0,0" Padding="0,0,0,0" />
                    <HyperlinkButton x:Name="sender" Grid.Column="1" Foreground="{Binding Converter={StaticResource hyperlinkColorConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{x:Bind player, Mode=OneTime}"  Padding="0,0,0,0" Tapped ="HyperlinkButton_Tapped" RightTapped="HyperlinkButton_RightTapped" FontSize="12" Margin="0,0,0,0"  />
                    <tk:MarkdownTextBlock Grid.Column="2" Text="{x:Bind text,Mode=OneTime}" VerticalAlignment="Center" FontSize="12" ParagraphLineHeight="4" Margin="0,0,0,0"  Padding="0,0,0,0" RightTapped="MarkdownTextBlock_RightTapped"  MinHeight="10" Height="Auto" Tapped="MarkdownTextBlock_Tapped"
                                              InlineCodeForeground="Firebrick" InlineCodeBackground="Black" ParagraphMargin="0"
                                              TextWrapping="Wrap" LinkClicked="MarkdownTextBlock_LinkClicked" />
                    </Grid>
                
            </DataTemplate>
        </Grid.Resources>
        <SemanticZoom TabFocusNavigation="Once">
            <SemanticZoom.ZoomedInView>
                <ListView x:Name="listView" x:FieldModifier="public" Margin="0" Padding="0" ItemTemplate="{StaticResource MessageViewTemplate}"
                   ItemsSource="{x:Bind cvsGroups.View}" >
            
                     <ListView.GroupStyle>
                        <GroupStyle HeaderTemplate="{StaticResource ZoomedInGroupHeaderTemplate}" />
                    </ListView.GroupStyle>
                    <!-- The ItemsStackPanel must be edited to update the following two properties -->
                    <!-- These properties allow the list to grow from the bottom -->
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView" 
                              VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <!-- This setter property is created so ListViewItems correctly align to the left or right. -->
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="4,0,4,0" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </SemanticZoom.ZoomedInView>
            <SemanticZoom.ZoomedOutView>
                <ListView ItemsSource="{x:Bind cvsGroups.View.CollectionGroups}" ItemTemplate="{StaticResource ZoomedOutTemplate}"  />
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>
        <Grid Grid.Row="1" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="translateButton" Click="Button_Click">
                <SymbolIcon Symbol="Library" />
            </Button>
			<TextBox x:Name="input" x:FieldModifier="public" Grid.Column="1"  VerticalAlignment="Center" KeyDown="input_KeyDown" PlaceholderText="Please enter message" IsTabStop="True"  Margin="4,0,4,0" InputScope="Chat" IsSpellCheckEnabled="True" TextWrapping="Wrap" TabFocusNavigation="Once"  />
        </Grid>
       
    </Grid>
</local:UserTab>
