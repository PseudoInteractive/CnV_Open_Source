<UserControl
    x:Class="COTG.Views.ChatTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:COTG.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <TextBlock Text="Hello there!" >
			<TextBlock.Foreground>
				<SolidColorBrush Color="#FFF266E3"/>
			</TextBlock.Foreground>
			<TextBlock.Shadow>
				<ThemeShadow/>
			</TextBlock.Shadow></TextBlock>
		<Image Source="/images/defender.png" Opacity="0.5" Stretch="Uniform">
			<Image.FocusVisualPrimaryBrush>
				<AcrylicBrush TintColor="#CCD12929" FallbackColor="#FF344991"/>
			</Image.FocusVisualPrimaryBrush>
		</Image>
	</Grid>
</UserControl>
