<local:UserTab
    x:Class="COTG.Views.ChatTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:COTG.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wuxdata="using:Windows.UI.Xaml.Data"
    xmlns:tk="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <CollectionViewSource x:Name="cvsGroups" Source="{x:Bind Groups}" IsSourceGrouped="True" ItemsPath="Items"
                              />
            <DataTemplate x:Key="ZoomedInGroupHeaderTemplate" x:DataType="local:ChatEntryGroup">
                <TextBlock Text="{x:Bind Title,Mode=OneTime}" Foreground="{ThemeResource ApplicationForegroundThemeBrush}" FontStretch="ExtraExpanded" Style="{StaticResource SubtitleTextBlockStyle}"/>
            </DataTemplate>
            <DataTemplate x:Key="ZoomedOutTemplate" x:DataType="wuxdata:ICollectionViewGroup">
                <TextBlock Text="{x:Bind ((local:ChatEntryGroup)Group).Title,Mode=OneTime}" Style="{StaticResource SubtitleTextBlockStyle}" FontStretch="UltraExpanded" TextWrapping="Wrap"/>
            </DataTemplate>
            <!-- Data template used: -->
            <!-- The data template is bound to a custom DataType called Message. -->
            <!-- Each Message object has a color and alignment assigned to it based on whether it was
sent or received, and those values are bound in the DataTemplate.-->
            <DataTemplate x:Key="MessageViewTemplate" x:DataType="local:ChatEntry">
                    <Grid  Background="{x:Null}" Margin="16 0 0 0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width ="65"  />
                        <ColumnDefinition Width ="90" />
                        <ColumnDefinition Width ="*" />
                    </Grid.ColumnDefinitions>
                        <TextBlock Text="{x:Bind arrivedString,Mode=OneTime}" VerticalAlignment="Center" Foreground="Gray"  FontSize="14"  />
                        <HyperlinkButton Grid.Column="1" Foreground="Green" VerticalAlignment="Center" Content="{x:Bind player, Mode=OneTime}" FontStretch="SemiCondensed" Tapped="HyperlinkButton_Tapped"  FontSize="14" />
                        <tk:MarkdownTextBlock Grid.Column="2" Text="{x:Bind text,Mode=OneTime}" VerticalAlignment="Center" FontSize="14"
                                              InlineCodeForeground="Firebrick" InlineCodeBackground="Black"
                                              TextWrapping="WrapWholeWords" LinkClicked="MarkdownTextBlock_LinkClicked"/>
                    </Grid>
                
            </DataTemplate>
        </Grid.Resources>
        
        <SemanticZoom x:Name="Control1" >
            <SemanticZoom.ZoomedInView>
                <ListView x:Name="listView" x:FieldModifier="public" 
             ItemTemplate="{StaticResource MessageViewTemplate}"
                   ItemsSource="{x:Bind cvsGroups.View}" >
                    <ListView.GroupStyle>
                        <GroupStyle HeaderTemplate="{StaticResource ZoomedInGroupHeaderTemplate}" />
                    </ListView.GroupStyle>
                    <!-- The ItemsStackPanel must be edited to update the following two properties -->
                    <!-- These properties allow the list to grow from the bottom -->
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView" 
                              VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <!-- This setter property is created so ListViewItems correctly align to the left or right. -->
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </SemanticZoom.ZoomedInView>
            <SemanticZoom.ZoomedOutView>
                <ListView ItemsSource="{x:Bind cvsGroups.View.CollectionGroups}" SelectionMode="None" ItemTemplate="{StaticResource ZoomedOutTemplate}"  />
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>
        <TextBox x:Name="input" x:FieldModifier="public" Grid.Row="1" VerticalAlignment="Center" KeyDown="input_KeyDown" PlaceholderText="Message"></TextBox>
    </Grid>
</local:UserTab>
