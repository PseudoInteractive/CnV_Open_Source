<local:UserTab x:Class="COTG.Views.OutgoingTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:behaviors="using:COTG.Behaviors"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:game="using:COTG.Game"
      xmlns:gridCommands="using:Telerik.UI.Xaml.Controls.Grid.Commands"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:COTG.Models"
      xmlns:cotg="using:COTG"
      xmlns:my="using:Microsoft.UI.Xaml.Controls"
      xmlns:td="using:Telerik.UI.Xaml.Controls.Data"
      xmlns:tdd="using:Telerik.Data.Core"
      xmlns:tg="using:Telerik.UI.Xaml.Controls.Grid"
      xmlns:tk="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:tl="using:Telerik.UI.Xaml.Controls"
      xmlns:local="using:COTG.Views"
      Background="{x:Null}"
      DataContext="Outgoing"
      mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <tg:RadDataGrid x:Name="defenderGrid"
                        GridLinesThickness="1"
                        AutoGenerateColumns="False"
                        CanUserChooseColumns="True"
                        ColumnResizeHandleDisplayMode="OnColumnHeaderActionFlyoutOpen"
                        FontSize="12"
                        RowHeight="32"
                        PointerPressed="gridPointerPress"
                        PointerExited="gridPointerExited"
                        GroupPanelPosition="Bottom"
                        ItemsSource="{x:Bind defenders, Mode=OneTime}"
                        RowDetailsDisplayMode="Single"
                        AlternationStep="2"
                        SelectionMode="Single"
                        ColumnDataOperationsMode="Flyout"
                        UserGroupMode="Enabled"
                        SelectionUnit="Row"
                        UserSortMode="Auto">
            <tg:RadDataGrid.Commands>
                <local:DataBindingComplete Id="DataBindingComplete" />
            </tg:RadDataGrid.Commands>
            <tg:RadDataGrid.RowDetailsTemplate>
                <DataTemplate x:DataType="game:Spot">
                    <tg:RadDataGrid x:Name="armyGrid"
                                    ItemsSource="{x:Bind incoming}"
                                    CanUserChooseColumns="True"
                                    GridLinesThickness="1"
                                    FontSize="12"
                                    HorizontalAlignment="Stretch"
                                    RowHeight="74"
                                    ColumnResizeHandleDisplayMode="OnColumnHeaderActionFlyoutOpen"
                                    ColumnDataOperationsMode="Flyout"
                                    Tapped="ArmyTapped"
                                    UserGroupMode="Disabled"
                                    AlternationStep="2"
                                    AutoGenerateColumns="False">
                        <tg:RadDataGrid.Columns>
                            <tg:DataGridTimeColumn Width="80"
                                                   PropertyName="time"
                                                   CellContentFormat="{}{0:dd',' HH':'mm':'ss}"
                                                   SizeMode="Fixed"
                                                   
                                                   CellContentStyle="{StaticResource CenterAlign}" />
                            <tg:DataGridTextColumn PropertyName="xy"
                                                   Width="45"
                                                   SizeMode="Fixed"
                                                   CellContentStyle="{StaticResource CenterAlignLink}" />
                            <tg:DataGridNumericalColumn PropertyName="ts"
                                            SizeMode="Fixed"
                                       CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,7:N0}"
                                            Width="50" />
                            <tg:DataGridTextColumn PropertyName="playerName"
                                                   Header="Player"
                                                   Width="70"
                                                   SizeMode="Auto"
                                                   CellContentStyle="{StaticResource LeftAlign}" />
                            <tg:DataGridNumericalColumn PropertyName="dist"
                                            SizeMode="Fixed"
                                       CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,3:N0}"
                                            Width="32" />
                            <tg:DataGridBooleanColumn PropertyName="isDefense"
                                                      Width="30"
                                                      SizeMode="Fixed"
                                                      CellContentStyle="{StaticResource CenterAlign}" />
                            <tg:DataGridTextColumn PropertyName="sourceCN"
                                                   Header="City"
                                                   Width="70"
                                                   SizeMode="Auto"
                                                   CellContentStyle="{StaticResource LeftAlign}" />
                            <tg:DataGridTimeColumn Width="80"
                                                   PropertyName="spotted"
                                                   CellContentFormat="{}{0:dd',' HH':'mm':'ss}"
                                                   CellContentStyle="{StaticResource CenterAlign}"
                                                   SizeMode="Fixed" />
                            
                        </tg:RadDataGrid.Columns>
                        <!--<tg:RadDataGrid.AggregateDescriptors>
                            <tdd:PropertyAggregateDescriptor PropertyName="SE"
                                                                     Function="Count" />
                            <tdd:PropertyAggregateDescriptor PropertyName="Sen"
                                                                     Function="Count" />
                            <tdd:PropertyAggregateDescriptor PropertyName="atsKill"
                                                                     Function="Sum" />
                            <tdd:PropertyAggregateDescriptor PropertyName="dtsKill"
                                                                     Function="Sum" />
                            <tdd:PropertyAggregateDescriptor PropertyName="aTS"
                                                                     Function="Sum" />
                            <tdd:PropertyAggregateDescriptor PropertyName="dTS"
                                                                     Function="Sum" />
                        </tg:RadDataGrid.AggregateDescriptors>-->
                    </tg:RadDataGrid>
                </DataTemplate>
            </tg:RadDataGrid.RowDetailsTemplate>
            <tg:RadDataGrid.Columns>
                <tg:DataGridImageColumn PropertyName="icon"
                                        SizeMode="Fixed"
                                        Width="32" />
                <tg:DataGridTextColumn PropertyName="Claim"
                                            SizeMode="Fixed"
                                       
                                       CellContentStyle="{StaticResource CenterAlign}"
                                            Width="30" />
                <tg:DataGridTextColumn PropertyName="xy"
                                       SizeMode="Fixed"
                                       
                                       CellContentStyle="{StaticResource CenterAlignLink}"
                                       Width="44" />
                <tg:DataGridNumericalColumn PropertyName="IncomingAttacks"
                                            Header="incA"
                                            SizeMode="Fixed"
                                            CellContentStyle="{StaticResource CenterAlign}"
                                            CellContentFormat="{}{0,N0}"
                                            Width="30" />
                <tg:DataGridNumericalColumn PropertyName="tsHome"
                                            Header="tsNow"
                                            SizeMode="Fixed"
                                            CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,7:N0}"
                                            Width="55" />
                <tg:DataGridTextColumn PropertyName="player"
                                       CellContentStyle="{StaticResource LeftAlign}"
                                       SizeMode="Stretch"
                                       Width="50" />
                <tg:DataGridTextColumn PropertyName="cityName"
                                       SizeMode="Stretch"
                                       CellContentStyle="{StaticResource LeftAlign}"
                                       Width="60" />
                <tg:DataGridTextColumn PropertyName="alliance"
                                       CellContentStyle="{StaticResource LeftAlign}"
                                       SizeMode="Stretch"
                                       Width="50" />
            </tg:RadDataGrid.Columns>
        </tg:RadDataGrid>
    </Grid>
</local:UserTab>
