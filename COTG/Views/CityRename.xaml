<ContentDialog
    x:Class="COTG.Views.CityRename"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:COTG.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Name (try to avoid '-')"
    PrimaryButtonText="Name"
    SecondaryButtonText="Suggested"
    CloseButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    BorderBrush="{ThemeResource SystemControlBackgroundListMediumRevealBorderBrush}"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="name" Header="Name" x:FieldModifier="public"   />
        <TextBox Grid.Row="1" x:Name="suggested" Header="Suggested" x:FieldModifier="public" />
    </Grid>
</ContentDialog>
