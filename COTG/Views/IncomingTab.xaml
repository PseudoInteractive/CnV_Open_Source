<local:UserTab x:Class="COTG.Views.IncomingTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:game="using:COTG.Game"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:cotg="using:COTG"
      xmlns:my="using:Microsoft.UI.Xaml.Controls"
      xmlns:tdd="using:Telerik.Data.Core"
      xmlns:tg="using:Telerik.UI.Xaml.Controls.Grid"
      xmlns:tk="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:tl="using:Telerik.UI.Xaml.Controls"
      xmlns:local="using:COTG.Views"
      Background="{x:Null}"
      Tag="Incoming"
			   TabNavigation="Once"
			  IsTabStop="True"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
<tk:WrapPanel>
	<ToggleButton x:Name="onlyMe" Content="Only Me"  />
</tk:WrapPanel>
        <tg:RadDataGrid x:Name="defenderGrid"
						Grid.Row="1"
                        x:FieldModifier="public"
						IsTabStop="True"
               AllowFocusOnInteraction="True"
						TabFocusNavigation="Once"
                        AutoGenerateColumns="False"
                        CanUserChooseColumns="True"
                        ColumnResizeHandleDisplayMode="OnColumnHeaderActionFlyoutOpen"
                        FontSize="{StaticResource MediumFontSize}"
                        RowHeight="{StaticResource GridRowHeight}"
                                IsTextScaleFactorEnabled="False"
                       
                        PointerPressed="gridPointerPress"
                        GroupPanelPosition="Bottom"
                        ItemsSource="{x:Bind game:Spot.emptySpotSource, Mode=OneTime}"
                        AlternationStep="2"
                        SelectionMode="Extended"
                        ColumnDataOperationsMode="Flyout"
                        UserGroupMode="Enabled"
                        SelectionUnit="Row"
                        SelectionChanged="defenderGrid_SelectionChanged"
                        UserSortMode="Auto">

            <tg:RadDataGrid.Columns>
                <tg:DataGridImageColumn PropertyName="icon"
                                        Header="I"
                                        SizeMode="Fixed"
                                        Width="32"
                                         />
                <tg:DataGridTextColumn PropertyName="Claim"
                                            
                                       
                                       CellContentStyle="{StaticResource CenterAlign}"
                                             />
                <tg:DataGridTextColumn PropertyName="xy"
                                       
                                       
                                       CellContentStyle="{StaticResource CenterAlignLink}"
                                        />
                <tg:DataGridNumericalColumn PropertyName="tsDefMax"
											Header="MaxD"
                                            
                                       CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,7:N0}"
                                             />
                <tg:DataGridNumericalColumn PropertyName="tsHome"
                                            Header="tsNow"
                                            
                                            CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,7:N0}"
                                             />
                <tg:DataGridNumericalColumn PropertyName="incMax"
                                            
                                            CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,7:N0}"
                                             />
                <tg:DataGridNumericalColumn PropertyName="incTotal"
                                            
                                            CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,7:N0}"
                                            IsVisible="False"
                                             />
                <tg:DataGridTextColumn PropertyName="player"
                                       CellContentStyle="{StaticResource LeftAlign}"
                                       SizeMode="Stretch"
                                        />
                <tg:DataGridBooleanColumn PropertyName="underSiege"
                                                      
                                                      
                                                      CellContentStyle="{StaticResource CenterAlign}" />
                <tg:DataGridNumericalColumn PropertyName="incomingAttacks"
                                            Header="inA"
                                            
                                            CellContentStyle="{StaticResource CenterAlign}"
                                            CellContentFormat="{}{0,1:N0}"
                                             />
                <tg:DataGridNumericalColumn PropertyName="incomingDefenders"
                                            Header="inD"
                                            
                                            CellContentStyle="{StaticResource CenterAlign}"
                                            CellContentFormat="{}{0,1:N0}"
                                             />
       
                <tg:DataGridTextColumn PropertyName="cityName"
                                       SizeMode="Stretch"
                                       CellContentStyle="{StaticResource LeftAlign}"
                                         IsVisible="False" />
                <tg:DataGridTextColumn PropertyName="alliance"
                                       CellContentStyle="{StaticResource LeftAlign}"
                                       SizeMode="Stretch"
                                       IsVisible="False"
                                        />
                <tg:DataGridNumericalColumn PropertyName="cont"
                                            CellContentStyle="{StaticResource CenterAlign}"
                                            
                                             />
                <tg:DataGridNumericalColumn PropertyName="scoutRange"
                                            CellContentStyle="{StaticResource RightAlign}"
                                             IsVisible="False"
                                             />
                 <tg:DataGridNumericalColumn PropertyName="tsOff"
                                             Header="offense home"
                                            
                                       CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,7:N0}"
                                             IsVisible="False"
                                             />
				<tg:DataGridBooleanColumn PropertyName="isOnWater"
                                                      
                                                      
                                                      CellContentStyle="{StaticResource CenterAlign}" IsVisible="False" />
                   <tg:DataGridTextColumn PropertyName="incTT"
                                 IsCellFlyoutEnabled="True"
                                       SizeMode="Stretch"
                                       CellContentStyle="{StaticResource LeftAlign}"
                                          
                                        />
				                
            </tg:RadDataGrid.Columns>
        </tg:RadDataGrid>

        <tg:RadDataGrid x:Name="armyGrid"
                        Grid.Row="2"
                        AllowFocusOnInteraction="True"
						IsTabStop="True"
						TabFocusNavigation="Once"
                                    ItemsSource="{x:Bind game:Army.empty}"
                                    CanUserChooseColumns="True"

						GridLinesThickness="1"
                                    FontSize="{StaticResource MediumFontSize}"
                                    HorizontalAlignment="Stretch"
                                    RowHeight="74"
                                    ColumnResizeHandleDisplayMode="OnColumnHeaderActionFlyoutOpen"
                                    ColumnDataOperationsMode="Flyout"
                                    Tapped="ArmyTapped"
                                    UserGroupMode="Disabled"
                                    AlternationStep="2"
                                    AutoGenerateColumns="False">
            <tg:RadDataGrid.Columns>
                <tg:DataGridTimeColumn 
                                                   PropertyName="time"
                                                   CellContentFormat="{}{0:dd',' HH':'mm':'ss}"
                                             
                                                   
                                                   CellContentStyle="{StaticResource CenterAlign}" />
                <tg:DataGridTextColumn PropertyName="sXY"
                                                   
                                             
                                                   CellContentStyle="{StaticResource CenterAlignLink}" />
                <tg:DataGridTextColumn PropertyName="sPlayer"
                                                   Header="Player"
                                                   
                                                   
                                                   CellContentStyle="{StaticResource LeftAlign}" />
                <tg:DataGridNumericalColumn PropertyName="dist"
                                           
                                       CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,3:N0}"
                                             />
                <tg:DataGridTextColumn PropertyName="aType"
                                                      
                                                     
                                                      CellContentStyle="{StaticResource CenterAlign}" />

                <tg:DataGridTextColumn PropertyName="sourceCN"
                                                   Header="City"
                                                   
                                                   SizeMode="Auto"
                                                   CellContentStyle="{StaticResource LeftAlign}" />
                <tg:DataGridTimeColumn 
                                                   PropertyName="spotted"
                                                   CellContentFormat="{}{0:dd',' HH':'mm':'ss}"
                                                   CellContentStyle="{StaticResource CenterAlign}"
                                                  />
                <tg:DataGridTemplateColumn Header="Troops"
                                                       
                                                      >

                 <tg:DataGridTemplateColumn.CellDecorationStyle>
                <Style TargetType="Rectangle">
                    <Setter Property="Fill" Value="Gray"/>
                </Style>
            </tg:DataGridTemplateColumn.CellDecorationStyle>
                    <tg:DataGridTemplateColumn.CellContentTemplate  >
                        <DataTemplate x:DataType="game:Army">
                            <StackPanel Orientation="Vertical"
                                                    Width="Auto">
                                <StackPanel Orientation="Horizontal"
                                                        Height="54">
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding i0}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding c0}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding i1}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding c1}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding i2}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding c2}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding i3}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding c3}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text="{Binding ts}"
                                                       FontSize="{StaticResource MediumFontSize}"
                                                       HorizontalAlignment="Center"
                                                       Height="22" />
                            </StackPanel>
                        </DataTemplate>
                    </tg:DataGridTemplateColumn.CellContentTemplate>
                </tg:DataGridTemplateColumn>
                <tg:DataGridTemplateColumn Header="Total Def"
                                                       
                                                       >
                    <tg:DataGridTemplateColumn.CellDecorationStyle>
                        <Style TargetType="Rectangle">
                            <Setter Property="Fill" Value="Gray"/>
                        </Style>
                    </tg:DataGridTemplateColumn.CellDecorationStyle>
                    <tg:DataGridTemplateColumn.CellContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical"
                                                    Width="Auto">
                                <StackPanel Orientation="Horizontal"
                                                        Height="54">
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding si0}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding sc0}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding si1}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding sc1}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding si2}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding sc2}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding si3}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding sc3}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding si4}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding sc4}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding si5}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding sc5}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding si6}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding sc6}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical"
                                                            Width="Auto">
                                        <Image Source="{Binding si7}"
                                                           HorizontalAlignment="Center"
                                                           Height="32" />
                                        <TextBlock Text="{Binding sc7}"
                                                               FontSize="{StaticResource MediumFontSize}"
                                                               HorizontalAlignment="Center"
                                                               Height="22" />
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text="{Binding dTS}"
                                                       FontSize="{StaticResource MediumFontSize}"
                                                       HorizontalAlignment="Center"
                                                       Height="22" />
                            </StackPanel>
                        </DataTemplate>
                    </tg:DataGridTemplateColumn.CellContentTemplate>
                </tg:DataGridTemplateColumn>
            </tg:RadDataGrid.Columns>
        </tg:RadDataGrid>
        <tk:GridSplitter
                    Grid.Row="1"
                    Background="Transparent"
                        VerticalAlignment="Top"
                    Canvas.ZIndex="22"
                        Height="11"
                        HorizontalAlignment="Stretch"
                    >
            <tk:GridSplitter.Element>
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE76F;"
                    Foreground="White"  IsHitTestVisible="False"    />
            </tk:GridSplitter.Element>
        </tk:GridSplitter>
    </Grid>
</local:UserTab>
