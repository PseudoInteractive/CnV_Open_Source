<UserControl x:Class="CnV.SigninPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Loaded="MainWindow_OnLoaded"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Button x:Name="SignInButton" Content="Sign In"  Padding="5" Click="SignInButton_Click" Margin="5" />
            <Button x:Name="SignOutButton" Content="Sign Out"  Padding="5" Click="SignOutButton_Click" Margin="5" Visibility="Collapsed" />
        </StackPanel>
		<TextBlock Grid.Row="1" Text="API Call Results" Margin="0,0,0,-5" FontFamily="Segoe Ui" />
        <TextBox Grid.Row="2" x:Name="ResultText" TextWrapping="Wrap" Margin="5" ScrollViewer.VerticalScrollBarVisibility="Auto" />
		<TextBlock Grid.Row="3" Text="Token Info" Margin="0,0,0,-5" FontFamily="Segoe Ui" />
        <TextBox Grid.Row="4" x:Name="TokenInfoText" TextWrapping="Wrap" Margin="5" ScrollViewer.VerticalScrollBarVisibility="Auto" />
    </Grid>
</UserControl>
