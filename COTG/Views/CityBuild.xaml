<UserControl
    x:Class="COTG.Views.CityBuild"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:COTG.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<GridView x:Name="quickBuild" Grid.Row="1">
			<GridView.ItemTemplate>
				<DataTemplate>
					<StackPanel Margin="20">
						<TextBlock Text="{Binding name}" />
						<Rectangle Fill="{Binding brush}" Width="128" Height="128" />
					</StackPanel>
				</DataTemplate>
			</GridView.ItemTemplate>
			<GridView.ItemsPanel>
				<ItemsPanelTemplate>
					<ItemsWrapGrid MaximumRowsOrColumns="3"/>
				</ItemsPanelTemplate>
			</GridView.ItemsPanel>
		</GridView>
		<StackPanel Grid.Row="2">
			<Rectangle x:Name="rect"  x:FieldModifier="public" Width="128" Height="128" HorizontalAlignment="Center" />


			<TextBlock x:Name="Building" Text="Castle" x:FieldModifier="public" FontSize="14" />
			<TextBlock x:Name="Description" x:FieldModifier="public" TextWrapping="WrapWholeWords" FontSize="12" />
			<Button x:Name="Upgrade" Content="Upgrade"  x:FieldModifier="public" Click="Upgrade_Click" />
			<Button x:Name="Downgrade" Content="DownGrade"  x:FieldModifier="public" Click="Downgrade_Click" />
			<Button x:Name="Destroy" Content="Destroy"  x:FieldModifier="public" Click="Destroy_Click" />



		</StackPanel>
	</Grid>
</UserControl>
