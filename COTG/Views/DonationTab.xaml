<local:UserTab
    x:Class="COTG.Views.DonationTab"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:game="using:COTG.Game"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:cotg="using:COTG"
      xmlns:my="using:Microsoft.UI.Xaml.Controls"
      xmlns:tg="using:Telerik.UI.Xaml.Controls.Grid"
      xmlns:tk="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:telerikGrid="using:Telerik.UI.Xaml.Controls.Grid"
      xmlns:local="using:COTG.Views"
        Tag="Donation"
	TabNavigation="Once"
			  IsTabStop="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="66"/>
            <RowDefinition Height="66" />
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" >
            <my:NumberBox Margin="4" Header="Reserve Carts" Value="{x:Bind local:DonationTab.reserveCarts,Mode=TwoWay}" AcceptsExpression="True"
                          SmallChange="100" 
                           NumberFormatter="{x:Bind cotg:App.formatterInt,Mode=OneTime}" 
                          
                          LargeChange="1000" FontSize="{StaticResource MediumFontSize}"
                            />
            <my:NumberBox Margin="4" Header="Reserve Carts %" Value="{x:Bind local:DonationTab.reserveCartsPCT,Mode=TwoWay}" AcceptsExpression="True"
                           
                          SmallChange="0.02"  FontSize="{StaticResource MediumFontSize}"
                           NumberFormatter="{x:Bind cotg:App.percentFormatter,Mode=OneTime}" />
            <my:NumberBox Margin="4" Header="Reserve Ships" Value="{x:Bind local:DonationTab.reserveShips,Mode=TwoWay}" AcceptsExpression="True"
                          SmallChange="10"  FontSize="{StaticResource MediumFontSize}" 
                          LargeChange="100" 
                           NumberFormatter="{x:Bind cotg:App.formatterInt,Mode=OneTime}" 
                                  />
            <my:NumberBox Margin="4" Header="Reserve Ships %" Value="{x:Bind local:DonationTab.reserveShipsPCT,Mode=TwoWay}" AcceptsExpression="True"
                           
                          SmallChange="0.02"   FontSize="{StaticResource MediumFontSize}"
                           NumberFormatter="{x:Bind cotg:App.percentFormatter,Mode=OneTime}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <my:NumberBox  Header="Reserve Wood" Value="{x:Bind local:DonationTab.reserveWood,Mode=TwoWay}"
                    Style="{StaticResource NumberBoxSmall}" NumberFormatter="{x:Bind cotg:App.formatterInt,Mode=OneTime}"
                    SmallChange="100000"  LargeChange="1000000"
                      />
            <my:NumberBox Header="Reserve Stone" Value="{x:Bind local:DonationTab.reserveStone,Mode=TwoWay}"
                   Style="{StaticResource NumberBoxSmall}" NumberFormatter="{x:Bind cotg:App.formatterInt,Mode=OneTime}"
                    SmallChange="100000"  LargeChange="1000000"
                      />
            <my:NumberBox Header="Wood:Stone" Value="{x:Bind local:DonationTab.woodStoneRatio,Mode=TwoWay}"
                  Style="{StaticResource NumberBoxSmall}" SmallChange="0.125" FontSize="{StaticResource MediumFontSize}"  />
        </StackPanel>
        <telerikGrid:RadDataGrid x:Name="donationGrid"
                                 x:FieldModifier="public"
                        Grid.Row="2"
								 							Margin="4,4,8,16"

                                 AllowFocusOnInteraction="True"
                        AutoGenerateColumns="False"
            CanUserChooseColumns="True"
								 IsTabStop="True"
                        ColumnResizeHandleDisplayMode="Always"
                        UserGroupMode="Enabled"
                        PointerPressed="gridPointerPress"
                        FontSize="{StaticResource MediumFontSize}"
                        ItemsSource="{x:Bind game:City.emptyCitySource, Mode=OneTime}"
                        RowHeight="{StaticResource GridRowHeight}"
                        AlternationStep="2"
                        SelectionMode="Single"
                        SelectionUnit="Row"
                        GroupPanelPosition="Bottom"
                        SelectionChanged="donationGrid_SelectionChanged"
                        >
                <telerikGrid:RadDataGrid.Columns>
                <telerikGrid:DataGridImageColumn PropertyName="icon"
                                        Header="I"
												 SizeMode="Fixed"
                                        Width="32"
                                         />
                    <telerikGrid:DataGridTextColumn PropertyName="nameAndRemarks"
                                       
                                                CellContentStyle="{StaticResource LeftAlign}"
													SizeMode="Auto"
                                        />
                    <telerikGrid:DataGridTextColumn PropertyName="xy"
                                                CellContentStyle="{StaticResource CenterAlignLink}"
                                       SizeMode="Auto"
                                        />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="cont"
                                                      SizeMode="Auto"
                                                      CellContentStyle="{StaticResource CenterAlign}"
                                             />
                    <telerikGrid:DataGridNumericalColumn PropertyName="Wood"
                                            CellContentFormat="{}{0,7:N0}"
                                                     CellContentStyle="{StaticResource RightAlign}"
                                            
                                              />
                    <telerikGrid:DataGridNumericalColumn PropertyName="woodStorage"
                                            CellContentFormat="{}{0,7:N0}"
                                                     CellContentStyle="{StaticResource RightAlign}"
                                            
                                             IsVisible="False" />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="Stone"
                                            CellContentFormat="{}{0,7:N0}"
                                           
                                            CellContentStyle="{StaticResource RightAlign}"
                                             />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="CartsHome"
                                            CellContentFormat="{}{0,5:N0}"
                                            CellContentStyle="{StaticResource RightAlign}"
                                            SizeMode="Auto"
                                             />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="Carts"
                                            
                                           CellContentFormat="{}{0,5:N0}"
                                                      IsVisible="False"
                                             />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="ShipsHome"
                                            CellContentFormat="{}{0,5:N0}"
                                            CellContentStyle="{StaticResource RightAlign}"          
                                             />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="Ships"
                                            CellContentFormat="{}{0,5:N0}"
                                                      IsVisible="False"
                                             />
                    <telerikGrid:DataGridNumericalColumn PropertyName="points"
                                                     IsVisible="False"
                                             />
                </telerikGrid:RadDataGrid.Columns>
            </telerikGrid:RadDataGrid>
        <telerikGrid:RadDataGrid x:Name="blessedGrid" x:FieldModifier="public"
                        Grid.Row="3"
								 							Margin="4,4,14,16"

                        AllowFocusOnInteraction="True"
                        AutoGenerateColumns="False"
                        CanUserChooseColumns="True"
								 IsTabStop="True"
                        ColumnResizeHandleDisplayMode="OnColumnHeaderActionFlyoutOpen"
                        ColumnDataOperationsMode="Flyout"
                        UserGroupMode="Disabled"
                        FontSize="{StaticResource MediumFontSize}"
                        
                        RowHeight="{StaticResource GridRowHeight}"
                        AlternationStep="2"
                        SelectionMode="Single"
                        SelectionUnit="Row"
                        GroupPanelPosition="Left"
                        >
            <tg:RadDataGrid.Commands>
                <local:BlessedTapCommand />
            </tg:RadDataGrid.Commands>
            <telerikGrid:RadDataGrid.Columns>

                <telerikGrid:DataGridTextColumn PropertyName="virtue"
                                                CellContentStyle="{StaticResource CenterAlignLink}"
                                                
                                        />
                <telerikGrid:DataGridNumericalColumn  PropertyName="dist"
                                                      Header="Travel"
                                                      
                                                      CellContentStyle="{StaticResource CenterAlign}"
                                            CellContentFormat="{}{0,4:N2}"
                                             />
                <telerikGrid:DataGridNumericalColumn  PropertyName="cont"
                                                      
                                                      CellContentStyle="{StaticResource CenterAlign}"
                                             />
                <telerikGrid:DataGridTextColumn PropertyName="xy"
                                                
                                                CellContentStyle="{StaticResource CenterAlignLink}"
                                        />
                <telerikGrid:DataGridDateColumn PropertyName="blessedUntil"
                                                    
                                                
                                                                                       CellContentFormat="{}{0:dd',' HH':'mm':'ss}"

                                                CellContentStyle="{StaticResource CenterAlign}"
                                        />
                <telerikGrid:DataGridTextColumn PropertyName="player"
                                                
                                                CellContentStyle="{StaticResource CenterAlign}"
                                                
                                        />
                <telerikGrid:DataGridTextColumn PropertyName="city"
                                       
                                                CellContentStyle="{StaticResource CenterAlign}"
                                        />
                <telerikGrid:DataGridNumericalColumn  PropertyName="wood"
                                                      CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,9:N0}"
                                                      
                                             />
                <telerikGrid:DataGridNumericalColumn  PropertyName="stone"
                                                      CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,9:N0}"
                                                      
                                             />
                <telerikGrid:DataGridNumericalColumn  PropertyName="pri"
                                                      
                                                      CellContentStyle="{StaticResource CenterAlign}"
                                            CellContentFormat="{}{0,2:N0}"
                                             />
                <telerikGrid:DataGridTextColumn PropertyName="notes" CellContentStyle="{StaticResource LeftAlign}"
                         />
            </telerikGrid:RadDataGrid.Columns>
        </telerikGrid:RadDataGrid>
        <tk:GridSplitter Grid.Row="3"
                         ResizeDirection="Rows"
                                   						 				IsTabStop="True"
				CursorBehavior="ChangeOnSplitterHover"
				GripperCursor="SizeNorthSouth"              Height="11"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Top"
                           Background="Transparent"
                    >
            <tk:GridSplitter.Element>
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE76F;"
                     IsHitTestVisible="False"    />
            </tk:GridSplitter.Element>
        </tk:GridSplitter>
    </Grid>
</local:UserTab>
