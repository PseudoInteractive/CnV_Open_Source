<local:UserTab
    x:Class="COTG.Views.DonationTab"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:game="using:COTG.Game"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:cotg="using:COTG"
      xmlns:my="using:Microsoft.UI.Xaml.Controls"
      xmlns:tg="using:Telerik.UI.Xaml.Controls.Grid"
      xmlns:tk="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:telerikGrid="using:Telerik.UI.Xaml.Controls.Grid"
      xmlns:local="using:COTG.Views"
        DataContext="Donation"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="66"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" >
            <my:NumberBox Margin="4" Header="Reserve Carts" Value="{x:Bind reserveCarts,Mode=TwoWay}" AcceptsExpression="True"
                          SmallChange="100"
                          LargeChange="1000" SpinButtonPlacementMode="Compact"  />
            <my:NumberBox Margin="4" Header="Reserve Carts (%)" Value="{x:Bind reserveCartsPCT,Mode=TwoWay}" AcceptsExpression="True"
                          SpinButtonPlacementMode="Compact"
                          SmallChange="0.02"
                           NumberFormatter="{x:Bind cotg:App.percentFormatter,Mode=OneTime}" />
            <my:NumberBox Margin="4" Header="Reserve Ships" Value="{x:Bind reserveShips,Mode=TwoWay}" AcceptsExpression="True"
                          SmallChange="10"
                          LargeChange="100" SpinButtonPlacementMode="Compact"  />
            <my:NumberBox Margin="4" Header="Reserve Ships (%)" Value="{x:Bind reserveShipsPCT,Mode=TwoWay}" AcceptsExpression="True"
                          SpinButtonPlacementMode="Compact"
                          SmallChange="0.02"
                           NumberFormatter="{x:Bind cotg:App.percentFormatter,Mode=OneTime}" />
            <my:NumberBox Margin="4" Header="Reserve Wood" Value="{x:Bind reserveWood,Mode=TwoWay}" AcceptsExpression="True"
                          SmallChange="100000"
                          LargeChange="1000000" SpinButtonPlacementMode="Compact"  />
            <my:NumberBox Margin="4" Header="Reserve Stone" Value="{x:Bind reserveStone,Mode=TwoWay}" AcceptsExpression="True"
                          SmallChange="100000"
                          LargeChange="1000000" SpinButtonPlacementMode="Compact"  />
        </StackPanel>
        <telerikGrid:RadDataGrid x:Name="donationGrid"
                                 x:FieldModifier="public"
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        CanUserChooseColumns="True"
                        ColumnResizeHandleDisplayMode="Always"
                        UserGroupMode="Enabled"
                        PointerPressed="gridPointerPress"
                        PointerExited="gridPointerExited"
                        FontSize="12"
                        ItemsSource="{x:Bind game:City.emptyCitySource, Mode=OneTime}"
                        RowHeight="34"
                        AlternationStep="2"
                        SelectionMode="Single"
                        SelectionUnit="Row"
                        GroupPanelPosition="Bottom"
                        SelectionChanged="donationGrid_SelectionChanged"
                        >
                <telerikGrid:RadDataGrid.Columns>
                    <telerikGrid:DataGridImageColumn PropertyName="icon"
                                        SizeMode="Fixed"
                                        Width="34" />
                    <telerikGrid:DataGridTextColumn PropertyName="nameAndRemarks"
                                       SizeMode="Auto"
                                                CellContentStyle="{StaticResource LeftAlign}"
                                       Width="45" />
                    <telerikGrid:DataGridTextColumn PropertyName="xy"
                                                CellContentStyle="{StaticResource CenterAlignLink}"
                                       SizeMode="Auto"
                                       Width="45" />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="cont"
                                                      SizeMode="Fixed"
                                                      CellContentStyle="{StaticResource CenterAlign}"
                                            Width="42" />
                    <telerikGrid:DataGridNumericalColumn PropertyName="wood"
                                            CellContentFormat="{}{0,7:N0}"
                                                     CellContentStyle="{StaticResource RightAlign}"
                                            SizeMode="Auto"
                                             Width="50" />
                    <telerikGrid:DataGridNumericalColumn PropertyName="woodStorage"
                                            CellContentFormat="{}{0,7:N0}"
                                                     CellContentStyle="{StaticResource RightAlign}"
                                            SizeMode="Auto"
                                            Width="50" IsVisible="False" />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="stone"
                                            CellContentFormat="{}{0,7:N0}"
                                           SizeMode="Auto"
                                            CellContentStyle="{StaticResource RightAlign}"
                                            Width="50" />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="cartsHome"
                                            CellContentFormat="{}{0,5:N0}"
                                            CellContentStyle="{StaticResource RightAlign}"
                                            SizeMode="Auto"
                                            Width="40" />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="carts"
                                            SizeMode="Auto"
                                           CellContentFormat="{}{0,5:N0}"
                                                      IsVisible="False"
                                            Width="40" />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="shipsHome"
                                            CellContentFormat="{}{0,5:N0}"
                                            CellContentStyle="{StaticResource RightAlign}"          
                                            Width="34" />
                    <telerikGrid:DataGridNumericalColumn  PropertyName="ships"
                                            CellContentFormat="{}{0,5:N0}"
                                                      IsVisible="False"
                                            Width="60" />
                    <telerikGrid:DataGridNumericalColumn PropertyName="points"
                                                     IsVisible="False"
                                            Width="80" />
                </telerikGrid:RadDataGrid.Columns>
            </telerikGrid:RadDataGrid>
        <telerikGrid:RadDataGrid x:Name="blessedGrid" x:FieldModifier="public"
                        Grid.Row="2"
                        Margin="0,14,0,0"
                        AutoGenerateColumns="False"
                        CanUserChooseColumns="True"
                        ColumnResizeHandleDisplayMode="OnColumnHeaderActionFlyoutOpen"
                        ColumnDataOperationsMode="Flyout"
                        UserGroupMode="Disabled"
                        FontSize="12"
                        ItemsSource="{x:Bind blessedGridSource, Mode=OneTime}"
                        RowHeight="34"
                        AlternationStep="2"
                        SelectionMode="Single"
                        SelectionUnit="Row"
                        GroupPanelPosition="Left"
                        >
            <tg:RadDataGrid.Commands>
                <local:BlessedTapCommand />
            </tg:RadDataGrid.Commands>
            <telerikGrid:RadDataGrid.Columns>

                <telerikGrid:DataGridTextColumn PropertyName="virtue"
                                                CellContentStyle="{StaticResource CenterAlignLink}"
                                                SizeMode="Fixed"
                                       Width="48" />
                <telerikGrid:DataGridNumericalColumn  PropertyName="dist"
                                                      Header="Hours"
                                                      SizeMode="Fixed"
                                                      CellContentStyle="{StaticResource CenterAlign}"
                                            CellContentFormat="{}{0,4:N2}"
                                            Width="40" />
                <telerikGrid:DataGridNumericalColumn  PropertyName="cont"
                                                      SizeMode="Fixed"
                                                      CellContentStyle="{StaticResource CenterAlign}"
                                            Width="40" />
                <telerikGrid:DataGridTextColumn PropertyName="xy"
                                                SizeMode="Fixed"
                                                CellContentStyle="{StaticResource CenterAlignLink}"
                                       Width="48" />
                <telerikGrid:DataGridDateColumn PropertyName="blessedUntil"
                                                    SizeMode="Auto"
                                                
                                                                                       CellContentFormat="{}{0:dd',' HH':'mm':'ss}"

                                                CellContentStyle="{StaticResource CenterAlign}"
                                       Width="45" />
                <telerikGrid:DataGridTextColumn PropertyName="player"
                                                SizeMode="Auto"
                                                CellContentStyle="{StaticResource CenterAlign}"
                                                
                                       Width="60" />
                <telerikGrid:DataGridTextColumn PropertyName="city"
                                       SizeMode="Auto"
                                                CellContentStyle="{StaticResource CenterAlign}"
                                       Width="60" />
                <telerikGrid:DataGridNumericalColumn  PropertyName="wood"
                                                      CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,9:N0}"
                                                      SizeMode="Fixed"
                                            Width="70" />
                <telerikGrid:DataGridNumericalColumn  PropertyName="stone"
                                                      CellContentStyle="{StaticResource RightAlign}"
                                            CellContentFormat="{}{0,9:N0}"
                                                      SizeMode="Fixed"
                                            Width="70" />
                <telerikGrid:DataGridNumericalColumn  PropertyName="pri"
                                                      SizeMode="Fixed"
                                                      CellContentStyle="{StaticResource CenterAlign}"
                                            CellContentFormat="{}{0,2:N0}"
                                            Width="35" />
                <telerikGrid:DataGridTextColumn PropertyName="notes"
                                       Width="45" />
            </telerikGrid:RadDataGrid.Columns>
        </telerikGrid:RadDataGrid>
        <tk:GridSplitter Grid.Row="2"
                         ResizeDirection="Rows"
                                                 Height="11"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Top"
                           Background="Transparent"
                    >
            <tk:GridSplitter.Element>
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE76F;"
                     IsHitTestVisible="False"    />
            </tk:GridSplitter.Element>
        </tk:GridSplitter>
    </Grid>
</local:UserTab>
