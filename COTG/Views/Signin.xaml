<ContentDialog
    x:Class="CnV.Views.Signin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:CnV.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="Login"
    SecondaryButtonText="Register"
    PrimaryButtonClick="LoginRequest"
    SecondaryButtonClick="RegisterRequest"
>

    <Grid>
	    <StackPanel >
		    <TextBox Header="Name" Text="{x:Bind views:SettingsPage.playerName, Mode=TwoWay }" PlaceholderText="Please don't use 'Avatar'"  />
		    <TextBox Header="Email" Text="{x:Bind views:SettingsPage.playerEmail, Mode=TwoWay }" PlaceholderText="Email..."  />
		    <TextBox Header="Password" Text="{x:Bind views:SettingsPage.playerPassword, Mode=TwoWay }"  PlaceholderText="Password... (not secure)"  />
	    </StackPanel>
    </Grid>
</ContentDialog>
